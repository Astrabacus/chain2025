{
  "framework": "Genesis-Gateway",
  "version": "1.0.0",
  "components": {
    "gateway": {
      "type": "Redis + FastAPI",
      "port": 8080,
      "channels": [
        "flops.mined",
        "wallet.updated",
        "block.validated"
      ],
      "api": [
        "/api/mine",
        "/api/block/{id}",
        "/api/wallet/{name}/balance",
        "/api/transfer"
      ]
    },
    "engine": {
      "type": "optional",
      "options": ["memory", "redis"],
      "active": "redis"
    },
    "audit": {
      "enabled": true,
      "log_path": "audit/gateway/",
      "token": "FLOPS",
      "symbolism": "Floating Point Operations per Symbol"
    },
    "security": {
      "signal_integrity": "verified",
      "fallback": "local memory",
      "audit_seal": true
    }
  },
  "symbolism": {
    "gateway_as_schleuse": true,
    "echo_as_contract": true,
    "redis_as_memory": true
  }
}
